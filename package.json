    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-perfectionist": "^4.12.3",
    "eslint-plugin-prettier": "^5.4.0",
    "npm-check-updates": "^18.0.1",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0"
